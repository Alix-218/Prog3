<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mio.mailserver.controller.ServerController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label fx:id="welcomeText"/>
  <Button fx:id="btnStart" text="Start" onMouseClicked="#startServer" prefHeight="40" prefWidth="80"/>
  <Button fx:id="btnStop" text="Stop" onMouseClicked="#stopServer" prefHeight="40" prefWidth="80"/>

  <TextArea fx:id="logArea" prefHeight="300" prefWidth="600"/>
</VBox>
